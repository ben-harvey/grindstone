<section id="todos">
  <header>
    <h2>Editing "<%= @list[:name] %>"</h2>
    <ul>
      <li>
        <form class="delete" action="/lists/<%= @id %>/delete" method="post">
          <button type="submit" class="delete">
            Delete List
          </button>
        </form>
      </li>
    </ul>
  </header>
</section>


<form action="/lists/<%= @id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input type="text" name="list_name" placeholder="" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save"></input>
    <a href="/lists/<%= @id %>">Cancel</a>
  </fieldset>
</form>

